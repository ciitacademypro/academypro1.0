@model IEnumerable<Firm>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    int serialNumber = 1; // Initialize the serial number
}


<div class="container">
    <div class="row">

        <div class="col-lg-12">
            <a class="btn btn-default btn-success" style="float:right; position:relative;" asp-action="create" >Add New Firm </a>
            <h2 class="st_title"><i class="uil uil-analysis"></i> Firms</h2>
            @await Html.PartialAsync("~/Areas/Admin/Views/Partials/_AlertPartial.cshtml")
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive mt-30">
                <table class="table ucp-table">
                    <thead class="thead-s">
                        <tr>
                            <th class="text-center">
                                @Html.DisplayNameFor(model => model.FirmLogo)
                            </th>
                            <th class="cell-ta">
                                @Html.DisplayNameFor(model => model.FirmShortName)
                            </th>
                            <th class="cell-ta">
                                @Html.DisplayNameFor(model => model.FirmName)
                            </th>
                            <th class="cell-ta">
                                @Html.DisplayNameFor(model => model.FirmEmail)
                            </th>
                            <th class="cell-ta">
                                @Html.DisplayNameFor(model => model.FirmContact)
                            </th>
                            <th class="cell-ta">
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    @Html.DisplayFor(modelItem => item.FirmLogo)
                                </td>
                                <td class="cell-ta">
                                    @Html.DisplayFor(modelItem => item.FirmShortName)
                                </td>
                                <td class="cell-ta">
                                    @Html.DisplayFor(modelItem => item.FirmName)
                                </td>
                                <td class="cell-ta">
                                    @Html.DisplayFor(modelItem => item.FirmEmail)
                                </td>
                                <td class="cell-ta">
                                    @Html.DisplayFor(modelItem => item.FirmContact)
                                </td>
                                <td class="cell-ta">
                                    @Html.DisplayFor(modelItem => item.Status)
                                </td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.FirmId">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.FirmId">Details</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
    </div>
</div>

